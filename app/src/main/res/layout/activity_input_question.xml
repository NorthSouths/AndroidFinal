<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputQuestionActivity">


    <TextView
        android:id="@+id/tv_inputquestion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="题目录入"
        android:textColor="#3f3f3f"
        android:textSize="18sp" />


    <TextView

        android:id="@+id/tv_inputquestion_questiontitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="问题题目:"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ev_inputquestion_questiontitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inputquestion_choicea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项A："
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/ev_inputquestion_choicea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="14"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inputquestion_choiceb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="选项B："
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/ev_inputquestion_choiceb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="14"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inputquestion_choicec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="选项C："
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/ev_inputquestion_choicec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="14"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inputquestion_choiced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="选项D："
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/ev_inputquestion_choiced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="14"
            android:inputType="text"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inputquestion_correctAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="正确答案为："
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/ev_inputquestion_correctAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="14"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inputquestion_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="问题章节："
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/ev_inputquestion_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="14"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_inputquestion_cancel"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />

        <Button
            android:id="@+id/bt_inputquestion_check"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认" />

    </LinearLayout>
</LinearLayout>