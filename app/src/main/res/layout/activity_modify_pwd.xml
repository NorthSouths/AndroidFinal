<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/modify_inputOldPwd"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:drawableStart="@mipmap/pwd"
            android:drawablePadding="10dp"
            android:ems="14"
            android:hint="原密码"
            android:inputType="textPassword"
            android:maxLines="1" />

        <EditText
            android:id="@+id/modify_inputNewPwd"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/modify_inputOldPwd"
            android:layout_alignStart="@+id/modify_inputOldPwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:drawableStart="@mipmap/pwd"
            android:drawablePadding="10dp"
            android:ems="14"
            android:hint="新密码"
            android:inputType="textPassword"
            android:maxLines="1" />


        <EditText
            android:id="@+id/modify_inputPwdRepeat"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/modify_inputNewPwd"
            android:layout_alignStart="@+id/modify_inputOldPwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:drawableStart="@mipmap/pwd"
            android:drawablePadding="10dp"
            android:ems="14"
            android:hint="重复输入"
            android:inputType="textPassword"
            android:maxLines="1" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/modify_returnBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:text="返回"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/modify_confirmBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="#FFF" />
    </LinearLayout>

</LinearLayout>